<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".PersonDesign">

    <ImageView
        android:id="@+id/iv_personal_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/defaultuser" />

    <LinearLayout
        android:id="@+id/blackOutLayoutNumber"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:gravity="left|center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="0dp">

        <TextView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="昵称："
            android:textSize="20sp" />

        <EditText
            android:id="@+id/otherNameInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入昵称"
            android:paddingLeft="2dp"
            android:textSize="20sp" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/radioGroup_btn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">
        <RadioButton
            android:id="@+id/manBtn"
            android:text="男"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/wemanBtn"
            android:text="女"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
    </RadioGroup>

<LinearLayout
    android:id="@+id/birthdayPick"
    android:layout_width="300dp"
    android:layout_height="50dp"
    android:layout_marginTop="25dp"
    android:gravity="left|center_horizontal"
    android:orientation="horizontal"
    >
    <TextView
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:text="生日："
        android:textSize="20sp" />

    <DatePicker
        android:theme="@android:style/Theme.Holo.Light"
        android:calendarViewShown="false"
        android:id="@+id/datePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>

    <Button
        android:id="@+id/bt_nextStep"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_login_register"
        android:elevation="0dp"
        android:outlineProvider="none"
        android:text="下一步"
        android:textColor="@color/account_lock_bg"
        android:textSize="@dimen/font_18"
        android:translationZ="0dp"
        tools:targetApi="lollipop" />

</LinearLayout>

